@model kasirResto.Models.KategoriMenu

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white">Create</h1>
<hr />
<div class="row">
    <div class="col-md-4 text-white">
        <form asp-action="Create"  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KategoriNama" class="control-label">Nama Kategori</label>
                <input asp-for="KategoriNama" class="form-control" />
                <span asp-validation-for="KategoriNama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriImage" class="control-label">Icon Kategori</label>
                <input asp-for="KategoriImage" class="form-control" type="file" />
                <span asp-validation-for="KategoriImage" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="KategoriStatus" class="control-label"></label>
                <input asp-for="KategoriStatus" class="form-control" value="1"/>
                <span asp-validation-for="KategoriStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger btn-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
