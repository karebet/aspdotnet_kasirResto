@model kasirResto.Models.KategoriMenu

@{
    ViewData["Title"] = "Edit";
    var kategori = ViewBag.datasaatini;
}

<div class="row text-white mt-3">
    <div class="col-md-3">
        <h1 class="text-white h1">Edit Kategori</h1>
    </div>
    <div class="col-md-1 text-end">
        <a asp-action="Delete" asp-route-id="@kategori.KategoriId" class="btn btn-danger rounded"><i class="fa fa-trash"></i></a>
    </div>
</div>
<hr />
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KategoriId" />
            <div class="form-group">
                <label asp-for="KategoriNama" class="control-label">Nama Kategori</label>
                <input asp-for="KategoriNama" class="form-control" />
                <span asp-validation-for="KategoriNama" class="text-danger"></span>
            </div>
            <img src="/@kategori.KategoriImage" alt="@kategori.KategoriNama" class="w-100 rounded" />
            <div class="form-group">
                <label asp-for="KategoriImage" class="control-label">Icon Kategori</label>
                <input asp-for="KategoriImage" class="form-control" type="file" name="KategoriImage" />
                <span asp-validation-for="KategoriImage" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="KategoriStatus" class="control-label"></label>
                <input asp-for="KategoriStatus" class="form-control" value="1" />
                <span asp-validation-for="KategoriStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
