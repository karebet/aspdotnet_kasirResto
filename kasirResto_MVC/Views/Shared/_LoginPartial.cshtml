@using Microsoft.AspNetCore.Identity
@using kasirResto.Areas.Identity.Data

@inject SignInManager<kasirRestoUser> SignInManager
@inject UserManager<kasirRestoUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-fw fa-user"></i>
            <span>Dashboard</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Menu" asp-action="Index">
            <i class="fas fa-fw fa-list-alt"></i>
            <span>Menu</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">
            <i class="fas fa-fw fa-receipt"></i>
            <span>Order</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index">
            <i class="fas fa-fw fa-user-check"></i>
            <span>Account</span>
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Content("~/Identity/Account/Login")">
            
            <button id="logout" type="submit" class="text-white bg-transparent border-0"><i class="fas fa-fw fa-user-lock"></i><span>LogOut</span></button>
        </form>
    </li>

    
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-fw fa-user-check"></i>
            <span>Login</span>
        </a>
    </li>

}
